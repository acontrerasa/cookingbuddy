<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mantis.cookingbuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:icon="@drawable/icon" android:screenOrientation="portrait" android:theme="@style/AppTheme"
        android:label="@string/app_name" android:name="CookingBuddyApplication">
        <activity android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mantis.cookingbuddy.RecipeListActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.mantis.cookingbuddy.RecipeListParse"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.mantis.cookingbuddy.CreateRecipeActivity" android:label="Create New Recipe">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.EditRecipeActivity" android:label="Edit Recipe">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.ViewRecipeActivity" android:label="Recipe">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.SettingsActivity" android:label="Member Settings">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.RegisterActivity" android:label="Register">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.PickerActivity" android:label="Select Friends">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.UserPasswordActivity" android:label="Select Friends">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.CreateReviewActivity" android:label="Review Recipe">
        </activity>
        <activity android:name="com.mantis.cookingbuddy.ReviewListActivity" android:label="Reviews">
        </activity>
        <activity android:name="com.facebook.LoginActivity"/>
        
        <meta-data android:value="@string/app_id" android:name="com.facebook.sdk.ApplicationId"/>
    </application>

</manifest>
